<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_cardview">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvDeviceadapterContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/radius_item"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDeviceadapterDetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_detail_item"
            android:gravity="center"
            tools:text="Vendor 1A86 - Product 7523" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>